package logic;

import java.io.Serializable;
import java.util.HashMap;
import java.util.Map;

public class Model implements Serializable {
    private static final Model instanse = new Model();
    private final Map<Integer, User> model = new HashMap();

    public static Model getInstance() {
        return instanse;
    }

    private Model() {
        this.model.put(1, new User("Nata", "Grom", 80000.0));
        this.model.put(2, new User("Nika", "Petra", 150000.0));
        this.model.put(3, new User("Siri", "Sarat", 100000.0));
    }

    public void add(User user, int id) {
        this.model.put(id, user);
    }

    public void delete(int id) {
        this.model.remove(id);
    }

    public Map<Integer, User> getFromList() {
        return this.model;
    }
}
