package com.example.servletStart;

import com.google.gson.Gson;
import com.google.gson.GsonBuilder;
import com.google.gson.JsonObject;
import java.io.BufferedReader;
import java.io.IOException;
import java.io.PrintWriter;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import logic.Dataset;

@WebServlet(
    urlPatterns = {"/math"}
)
public class ServletMath extends HttpServlet {
    Gson gson = (new GsonBuilder()).setPrettyPrinting().create();

    public ServletMath() {
    }

    protected void doPost(HttpServletRequest request, HttpServletResponse response) throws IOException {
        request.setCharacterEncoding("UTF-8");
        response.setContentType("application/json;charset=utf-8");
        StringBuffer sb = new StringBuffer();
        PrintWriter pw = response.getWriter();
        Dataset dataset = new Dataset();

        try {
            BufferedReader reader = request.getReader();

            String line;
            while((line = reader.readLine()) != null) {
                sb.append(line);
            }
        } catch (Exception var15) {
            System.out.println("ERROR");
        }

        JsonObject jObj = (JsonObject)this.gson.fromJson(String.valueOf(sb), JsonObject.class);
        double num1 = jObj.get("a").getAsDouble();
        double num2 = jObj.get("b").getAsDouble();
        switch (jObj.get("math").getAsString()) {
            case "+":
                dataset.result = num1 + num2;
                pw.print(this.gson.toJson(dataset));
                break;
            case "-":
                dataset.result = num1 - num2;
                pw.print(this.gson.toJson(dataset));
                break;
            case "*":
                dataset.result = num1 * num2;
                pw.print(this.gson.toJson(dataset));
                break;
            case "/":
                dataset.result = num1 / num2;
                pw.print(this.gson.toJson(dataset));
                break;
            default:
                dataset.code = "INTERNAL_ERROR";
                dataset.message = "request failed";
                pw.print(this.gson.toJson(dataset));
        }

    }
}
